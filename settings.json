        "TODO": {
            "foreground": "#8cc265",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "issue-draft",
            "gutterIcon": true
        },
        "FIXME": {
            "foreground": "#d18f52",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "flame",
            "gutterIcon": true
        },
        "BUG": {
            "foreground": "#e05561",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "bug",
            "gutterIcon": true
        },
        "HACK": {
            "foreground": "#c162de",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "tools",
            "gutterIcon": true
        },
        "NOTE": {
            "foreground": "#42b3c2",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "note",
            "gutterIcon": true,
            "hideFromTree": true,
            "hideFromStatusBar": true,
            "hideFromActivityBar": true
        },
        "QUESTION": {
            "foreground": "#4aa5f0",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "question",
            "gutterIcon": true,
            "hideFromTree": true,
            "hideFromStatusBar": true,
            "hideFromActivityBar": true
        },
        "WARNING": {
            "foreground": "#e05561",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "alert",
            "gutterIcon": true,
            "hideFromTree": true,
            "hideFromStatusBar": true,
            "hideFromActivityBar": true
        },
        "DEPRECATED": {
            "foreground": "#4f5666",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "circle-slash",
            "gutterIcon": true,
            "hideFromTree": true,
            "hideFromStatusBar": true,
            "hideFromActivityBar": true
        },
        "REFERENCE": {
            "foreground": "#d7dae0",
            "fontWeight": "bold",
            "fontStyle": "italic",
            "icon": "cross-reference",
            "gutterIcon": true,
            "hideFromTree": true,
            "hideFromStatusBar": true,
            "hideFromActivityBar": true
        }
    }
